model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String  
  fullname String
  username    String
  password String
  provider Provider @default(LOCAL)
  image String
  role Role @default(STUDENT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  deletedAt   DateTime?
  @@unique([email, provider])
}

enum Provider {
  LOCAL
  GOOGLE
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

